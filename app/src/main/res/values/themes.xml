<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GithubUserFinder.DayNight" parent="Theme.GithubUserFinder" />

    <style name="Theme.GithubUserFinder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <item name="colorOnPrimary">@color/black_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_400</item>
        <item name="colorOnSecondary">@color/black_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>

        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

        <!--Typography-->
        <item name="textAppearanceHeadline6">@style/TextAppearance.GithubUserFinder.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.GithubUserFinder.Body1</item>
    </style>

</resources>